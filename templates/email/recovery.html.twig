{% extends 'email/base.html.twig' %}

{% set url = url|default('#') %}

{% block title %}{{ subject|default('Email') }} | {{ parent() }}{% endblock %}

{% block content %}
    <tr>
        <td>
            <p>{{ "email.recovery.heading"|trans({'%app_name%': app_name}) }}</p>
            <p>{{ "email.recovery.explanation"|trans }}</p>
            <a class="btn btn-primary" href="{{ url }}">{% trans %}email.recovery.cta{% endtrans %}</a>
            <p>{{ "email.recovery.footer"|trans }}</p>
        </td>
    </tr>
{% endblock %}
