{% extends 'email/base.html.twig' %}

{% set url = url|default('#') %}

{% block title %}{{ subject|default('Email') }} | {{ parent() }}{% endblock %}

{% block content %}
    <tr>
        <td>
            <p>{{ "email.verify.heading"|trans({'%app_name%': app_name}) }}</p>
            <p>{{ "email.verify.explanation"|trans }}</p>
            <a class="btn btn-primary" href="{{ url }}">{{ 'email.verify.cta'|trans }}</a>
            <p>{{ "email.verify.footer"|trans }}</p>
        </td>
    </tr>
{% endblock %}
