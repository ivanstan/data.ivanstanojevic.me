<div class="alert alert-info mb-0" role="alert">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong>{% trans %}Please verify account.{% endtrans %}</strong>
    {{ "We sent you a verification email to confirm you are the owner of address <strong>%email%</strong>. Didn't recive any email?"|trans({'%email%': app.user.email})|raw }}

    <form class="d-inline-block" method="post" action="{{ path('user_verify') }}">
        <input type="hidden" name="_method" value="POST">
        <input type="hidden" name="_token" value="{{ csrf_token('verify' ~ app.user.id) }}">
        <button class="bg-transparent border-0 px-0"><u>Resend</u>.</button>
    </form>
</div>
