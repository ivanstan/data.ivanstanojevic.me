{% set route = app.request.get('_route') %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">{{ app_name }}</a>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item {% if route == 'app_index' %}active{% endif %}">
            <a class="nav-link" href="{{ path('app_index') }}">Index
                {% if route == 'app_index' %}<span class="sr-only">(current)</span>{% endif %}
            </a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item {% if route == 'user_index' %}active{% endif %}">
                <a class="nav-link" href="{{ path('user_index') }}">Users
                    {% if route == 'user_index' %}<span class="sr-only">(current)</span>{% endif %}
                </a>
            </li>
        {% endif %}
    </ul>
    <ul class="navbar-nav ml-auto">

        {% if app.user %}
            <li class="nav-item dropdown">
                <a class="nav-link" href="#" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true"
                   aria-expanded="false">
                    <i class="fa fa-user"></i> {{ app.user.email }}
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="{{ path('security_settings') }}">Settings</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                </div>
            </li>
        {% endif %}

        {% if not app.user %}
            <li class="nav-item dropdown"><a class="nav-link" href="{{ path('security_login') }}">Login</a></li>
        {% endif %}
    </ul>
</nav>

