{% extends 'pages/container.html.twig' %}

{% block title %}{{ 'settings.title'|trans }} | {{ parent() }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-8 mx-auto">
                <h3 class="mt-3">{{ 'settings.preferences'|trans }}</h3>
                {{ include('components/messages.html.twig') }}
                {{ form_start(preference_form) }}
                {{ form_widget(preference_form) }}
                <button class="btn btn-primary">{{ 'general.save'|trans }}</button>
                {{ form_end(preference_form) }}

                <h3 class="mt-3">{{ 'settings.change_password'|trans }}</h3>
                {{ form_start(password_form) }}
                {{ form_widget(password_form) }}
                <button class="btn btn-primary">{{ 'general.save'|trans }}</button>
                {{ form_end(password_form) }}
            </div>
        </div>
    </div>
{% endblock %}
