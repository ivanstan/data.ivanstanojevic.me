{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block nav %}{% endblock %}

{% block main %}
    <div class="container my-5">
        <form action="{{ path('app_quiz', {id: quiz.id}) }}" method="post">
            {% for index, question in quiz.questions %}
                <div class="row">
                    <div class="col-8 mx-auto py-3">
                        <h3>{{ index + 1 }}. {{ question.content }}</h3>
                        {% for answer in question.answers %}
                            <input type="radio" required checked name="question[{{ question.id }}]"
                                   value="{{ answer.answer.id }}"> {{ answer.answer.content }}
                            <br>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-8 mx-auto">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" required class="form-control" id="email" name="email">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8 mx-auto">
                    <button class="btn btn-primary btn-lg d-block mx-auto">Submit</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block footer %}{% endblock %}
