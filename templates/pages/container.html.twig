{% extends 'base.html.twig' %}

{% block body %}
    {% block notification %}
        {% if app.user and not app.user.verified %}
            {% include 'components/verify-notification.html.twig' %}
        {% endif %}
    {% endblock %}

    {% block nav %}
        {% include 'components/navigation.html.twig' %}
    {% endblock %}

    {% block messages %}
        {% if app.session.flashbag.peekAll() is not empty %}
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        {% include 'components/messages.html.twig' %}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endblock %}

    {% block content %}{% endblock %}

{% endblock %}
