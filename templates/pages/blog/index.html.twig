{% extends 'blog/base.html.twig' %}

{% block title %}Blog | Ivan StanojeviÄ‡{% endblock %}

{% block head %}
    <meta name="description"
          content="OpenData collection of free to use APIs and data sources. Weather and satellite information.">
    {{ parent() }}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
{% endblock %}

{% block featured %}
    <header class="featured mb-3"
            style="background: url(https://res.cloudinary.com/dn9s7hvks/image/upload/v1542983565/data.webp)">
        <div class="overlay"></div>
    </header>
{% endblock %}

{% block content %}
    <main class="container mb-4 mt-4" style="min-height: 600px">
        <div class="row">
            <div class="col-xl-8 offset-xl-2">
                {% for article in articles %}
                    <article>
                        <div class="row">
                            <div class="col-12">
                                <a href="{{ path('app_article_canonical', {'slug': article.slug}) }}">
                                    <h3>{{ article.title }}</h3>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <a href="{{ path('app_article_canonical', {'slug': article.slug}) }}"><img
                                            class="mb-3 mr-3" width="100%"
                                            src="{{ asset(article.image) }}"
                                            alt="{{ article.title }}"></a>
                            </div>
                            <div class="col-md-8">
                                <p>{{ article.teaser }}</p>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}
