{% extends 'base.html.twig' %}

{% block title %}Edit User | {{ parent() }}{% endblock %}

{% block body %}
    {% include 'components/navigation.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 class="mt-3">Edit user</h3>
                {{ include('components/messages.html.twig') }}
                {{ include('pages/user/_form.html.twig') }}

                <h3 class="mt-3">Change password</h3>
                {{ form_start(password_form) }}
                {{ form_widget(password_form) }}
                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                {{ form_end(password_form) }}
            </div>
        </div>
    </div>
{% endblock %}
