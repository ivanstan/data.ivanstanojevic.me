{% extends 'pages/content.html.twig' %}

{% block title %}{% trans %}Edit User{% endtrans %} | {{ parent() }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 class="mt-3">{% trans %}Edit user{% endtrans %}</h3>
                {{ include('components/messages.html.twig') }}
                {{ include('pages/user/_form.html.twig') }}

                <h3 class="mt-3">{% trans %}Change password{% endtrans %}</h3>
                {{ form_start(password_form) }}
                {{ form_widget(password_form) }}
                <button class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
                {{ form_end(password_form) }}
            </div>
        </div>
    </div>
{% endblock %}
