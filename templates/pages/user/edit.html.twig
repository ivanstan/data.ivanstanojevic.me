{% extends 'pages/container.html.twig' %}

{% block title %}{{ 'user.edit'|trans }} | {{ parent() }}{% endblock %}

{% block messages %}
    <div class="container">
        <div class="row">
            <div class="col-8 mx-auto">
                {% include 'components/messages.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container pb-3">
        <div class="row">
            <div class="col-8 mx-auto">
                <h3 class="mt-3">{{ 'user.edit'|trans }} </h3>
                {{ include('components/messages.html.twig') }}
                {{ include('pages/user/_form.html.twig') }}
                <h3 class="mt-3">{{ 'settings.change_password'|trans }}</h3>
                {{ form_start(password_form) }}
                {{ form_widget(password_form) }}
                <button class="btn btn-primary">{{ 'general.save'|trans }}</button>
                {{ form_end(password_form) }}
            </div>
        </div>
    </div>
{% endblock %}
